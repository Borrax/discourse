{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "es2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist"]
}
