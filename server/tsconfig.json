{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "shared/*": ["../shared/*"],
      "*": ["./src/*"]
    },
    "rootDirs": ["./src", "../shared"]
  },
  "include": ["./src/**.*ts"],
  "exclude": ["node_modules", "dist"]
}
